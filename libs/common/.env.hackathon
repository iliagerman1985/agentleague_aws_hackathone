# AWS Hackathon environment configuration
# This file is used for AWS hackathon deployment (ECS with S3/CloudFront frontend)
# NO SECRETS SHOULD BE STORED HERE - Secrets are loaded from AWS Secrets Manager

# Application settings
APP_ENV=hackathon
DEBUG=False
LOG_LEVEL=info
ALLOWED_HOSTS=api.hackathon.agentleague.ai,localhost,127.0.0.1

# API settings
API_PREFIX=/api/v1
PROJECT_NAME=agentleague

# Server settings
HOST=0.0.0.0
PORT=9998

# CORS settings for AWS deployment
# Frontend is served from CloudFront at app.hackathon.agentleague.ai
CORS_ORIGINS=https://app.hackathon.agentleague.ai,http://localhost:5888,http://localhost:3000

# Logging settings for AWS (structured logging)
LOG_LEVEL=INFO
LOG_JSON_FORMAT=True
LOG_CONSOLE_OUTPUT=True
LOG_FILE_OUTPUT=True
LOG_FILE_PATH=/app/logs/backend.log
LOG_ROTATION="50 MB"
LOG_RETENTION="7 days"
LOG_COMPRESSION=gzip

# AWS settings (no LocalStack in AWS deployment)
USE_LOCALSTACK=False
USE_AWS_SECRET_MANAGER=true

# AWS Secrets Manager configuration
AWS_SECRETS_MANAGER_SECRET_NAME=hackathon_secret
AWS_DEFAULT_REGION=us-east-1

# Cognito configuration for AWS deployment (shared with dev)
COGNITO_REGION=us-east-1
COGNITO_POOL_NAME=AgentLeague
COGNITO_CLIENT_NAME=AgentLeague
# These will be loaded from AWS Secrets Manager
COGNITO_USER_POOL_ID=us-east-1_Vatg7HDwE
COGNITO_CLIENT_ID=29cjti5omhe6b7l94j9af4qop9
# OAuth configuration
COGNITO_DOMAIN=https://login.agentleague.app
COGNITO_CALLBACK_URL=https://app.hackathon.agentleague.ai/auth/callback

# Disable mock Cognito for AWS deployment
USE_MOCK_COGNITO=false

# Database: Aurora Serverless v2 PostgreSQL with pgvector
# Connection details loaded from AWS Secrets Manager
# Note: Database endpoint is dynamically retrieved from Aurora cluster


# Stripe checkout redirect URLs (non-secret)
STRIPE_SUCCESS_URL=https://app.hackathon.agentleague.ai/billing/success
STRIPE_CANCEL_URL=https://app.hackathon.agentleague.ai/billing/cancel

# Chess Analysis Settings
STOCKFISH_PATH=stockfish
STOCKFISH_ANALYSIS_DEPTH=15
STOCKFISH_ANALYSIS_TIME_LIMIT=1.0
ENABLE_CHESS_ANALYSIS=true

# ============================================================================
# AGENT RUNNER CONFIGURATION
# ============================================================================
# Cloud environments (hackathon, development, production) always use AgentCore
# Local environments support multiple runners: direct, localhost
# Since this is a cloud environment, AGENT_RUNNER setting is ignored
AGENT_RUNNER=agentcore

# ============================================================================
# AGENTCORE RUNTIME CONFIGURATION
# ============================================================================
# These settings are used by the application runtime to connect to AgentCore

# Required: ARN of the deployed AgentCore runtime
# This must be set for cloud environments (hackathon/development/production)
# This will be populated by the GitHub Actions pipeline after AgentCore deployment
AGENTCORE_RUNTIME_ARN=arn:aws:bedrock-agentcore:us-east-1:619403130674:runtime/agentleague_hackathon_runtime-WCydDa5gfs

# Optional: Custom AgentCore endpoint (for localhost testing)
# AGENTCORE_ENDPOINT_URL=http://localhost:8080

# ============================================================================
# AGENTCORE DEPLOYMENT SETTINGS
# ============================================================================
# These settings are used ONLY by the deploy-agentcore.sh script
# They are NOT used by the application runtime

# Environment for AgentCore deployment
AGENTCORE_ENV=hackathon
# AWS account for AgentCore deployment
AGENTCORE_ACCOUNT_ID=619403130674
# AWS region for AgentCore deployment
AGENTCORE_AWS_REGION=us-east-1
# Project name for AgentCore deployment
AGENTCORE_PROJECT_NAME=agentleague
# Human-readable runtime name for create/update-by-name
AGENTCORE_RUNTIME_NAME=agentleague_hackathon_runtime
# IAM role name for AgentCore runtime execution
AGENTCORE_ROLE_NAME=agentleague-agentcore-runtime-hackathon
# Pre-existing IAM role ARN (created by Terraform)
AGENTCORE_ROLE_ARN=arn:aws:iam::619403130674:role/agentleague-agentcore-runtime-hackathon


GAME_TURN_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/619403130674/agentleague-game-turn-queue-hackathon
GAME_ANALYSIS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/619403130674/agentleague-game-analysis-queue-hackathon

